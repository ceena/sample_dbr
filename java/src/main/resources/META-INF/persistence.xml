<persistence version="1.0"
            xmlns="http://java.sun.com/xml/ns/persistence"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
            
   <persistence-unit name="hello-world-persistence" transaction-type="JTA">
       <jta-data-source>jdbc/i058650-hello-world-hdi</jta-data-source>
       <properties>
           <property name="eclipselink.target-database" value="org.eclipse.persistence.platform.database.HANAPlatform"/>
       </properties>
   </persistence-unit>
</persistence>