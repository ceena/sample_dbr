<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>mta</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>../mtad.yaml</source>
            <outputDirectory>META-INF</outputDirectory>
        </file>
        <file>
            <source>../xs-security.json</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>../manifest.yml</source>
            <outputDirectory>.</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>../approuter</directory>
            <outputDirectory>approuter</outputDirectory>
            <excludes>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../db</directory>
            <outputDirectory>db</outputDirectory>
            <excludes>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>com.sap.blrl.i058650:sample-xsa-java</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <outputFileNameMapping>sample-xsa-java.war</outputFileNameMapping>
        </dependencySet>
    </dependencySets>
</assembly>

